= simple_form_for @pin, html: { multipart: true } do |f|
	- if @pin.errors.any?
		#errors
			%h2
			= pluralize(@pin.errors.count, "errore")
			non permette a questo  Pin di essere  condiviso!

	.form-group
		= f.input :image, input_html: { class: 'form-control' }

	.form-group
		= f.input :title, input_html: { class: 'form-control' }
	
	.form-group
		= f.input :description, input_html: { class: 'form-control' }

	= f.button :submit, "Carica il Pin", class: "btn btn-primary"
	
	.btn-group.pull-right
		= f.check_box :dontcomments
		= f.label :dontcomments, "Non consentire commenti"

