- @pin.comments.each do |c|
    %b
        %p= c.user&.email
    %p= c.body
    %p= c.created_at.localtime

    - if user_signed_in?
        =link_to "Modifica", edit_pin_comment_path(c.pin.id, c.id), method: :GET, class: "btn btn-secondary"
        =link_to "Elimina", pin_comment_path(c.pin.id, c.id), method: :delete, data: { confirm: "Sei sicuro?" }, class: "btn btn-secondary "
    %br/
